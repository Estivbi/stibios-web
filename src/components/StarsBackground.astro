<div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
  <div class="stars-sm absolute inset-0"></div>
  <div class="stars-md absolute inset-0"></div>
  
</div>

<style>
  .stars-sm {
    width: 1px; height: 1px; background: transparent;
    box-shadow: 
      10vw 10vh #fff, 20vw 40vh #fff, 50vw 20vh #fff, 80vw 10vh #fff,
      15vw 60vh #fff, 35vw 80vh #fff, 70vw 60vh #fff, 90vw 90vh #fff,
      40vw 30vh #fff, 60vw 50vh #fff;
    opacity: 0.3;
    animation: moveStars 100s linear infinite;
  }
  
  .stars-md {
    width: 2px; height: 2px; background: transparent;
    box-shadow: 
      30vw 20vh #fff, 80vw 50vh #fff, 10vw 80vh #fff, 60vw 90vh #fff;
    opacity: 0.5;
    animation: moveStars 150s linear infinite;
  }

  @keyframes moveStars {
    from { transform: translateY(0); }
    to { transform: translateY(-100vh); }
  }
</style>