];

// Duplicamos el array para que el scroll sea infinito sin cortes
const infiniteTech = [...technologies, ...technologies];
---

<section class="py-20 border-y border-stibios-border/30 bg-stibios-bg/50 backdrop-blur-sm overflow-hidden relative">
  
  <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-stibios-bg to-transparent z-10"></div>
  <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-stibios-bg to-transparent z-10"></div>

  <div class="max-w-6xl mx-auto px-4 mb-8 text-center">
    <p class="text-xs font-mono text-stibios-dim tracking-[0.2em]">POWERED_BY_MODERN_STACK</p>
  </div>

  <div class="flex w-full">
    <div class="flex animate-scroll gap-16 items-center w-max pl-16">
      {infiniteTech.map((tech) => (
        <div class={`flex items-center gap-3 group cursor-default transition-colors ${tech.color}`}>
          <div class="w-8 h-8 opacity-60 group-hover:opacity-100 transition-opacity" set:html={tech.svg} />
          <span class="font-bold font-mono text-lg text-stibios-dim group-hover:text-current transition-colors">
            {tech.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>