---
import Layout from '../layouts/Layout.astro';
import TerminalHero from '../components/TerminalHero';
import BentoGrid from '../components/BentoGrid.astro';
import TechStack from '../components/TechStack.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Inicio">
    
    <section class="flex flex-col justify-center items-center min-h-[90vh] p-4 md:p-8 relative border-b border-stibios-border/50">
		<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-stibios-accent/5 rounded-full blur-[120px] pointer-events-none"></div>
		<TerminalHero client:load />
	</section>

    <BentoGrid />

    <TechStack />

	<Footer />
	
</Layout>